    <body>
        {# Start Header #}           
       <nav class="navbar navbar-inverse navbar-fixed-top">
       <div class="container-fluid">
       <!-- Brand and toggle get grouped for better mobile display -->
       <div class="navbar-header">
       <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
          <a class="navbar-brand" href="#">Add Procurement Officers</a>
       </div>
       </div><!-- /.container-fluid -->
      </nav>    
       {# End Header #}
            
            {# Start Container#}
            <div class="container">
                  {{ form_start(form) }}
                  {{ form_errors(form) }}
   

            <h5>Contact information</h5>
                  <div class="row">
            <div class="col-md-1">
              <span class="label label-default">{{ form_label(form.user.firstname,'First Name') }}</span>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                {{ form_errors(form.user.firstname) }}       
                {{ form_widget(form.user.firstname) }}
                </div>
            </div>
         </div>  
         <div class="row">
            <div class="col-md-1">
              <span class="label label-default">{{ form_label(form.user.lastname,'Last Name') }}</span>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                {{ form_errors(form.user.lastname) }}       
                {{ form_widget(form.user.lastname) }}
                </div>
            </div>
         </div>   
      
       
         <div class="row">
            <div class="col-md-1">
              <span class="label label-default">{{ form_label(form.user.email,'Email') }}</span>
            </div>
            <div class="col-md-4">
                <div class="form-group">
               {{ form_errors(form.user.email) }}       
               {{ form_widget(form.user.email) }}
                </div>
            </div>
         </div>         
        
         <h5>Login information</h5>
         <div class="row">
            <div class="col-md-1">
              <span class="label label-default">{{ form_label(form.user.username,'Username') }}</span>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                {{ form_errors(form.user.username) }}       
                {{ form_widget(form.user.username) }}
                </div>
            </div>
         </div>  
         <div class="row">
            <div class="col-md-1">
              <span class="label label-default">Password</span>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                {{ form_errors(form.user.password) }}       
                {{ form_widget(form.user.password) }}
                </div>
            </div>
         </div>   
         <div class="row">
         
          
            <div class="col-md-2">
                <div class="form-group">
                 {{ form_widget(form.Register) }}
                 {{ form_end(form) }}
                 </div>
            </div>
            
         </div>        
        
       </div>
        {# End Container #}
            
    </body>
</html>