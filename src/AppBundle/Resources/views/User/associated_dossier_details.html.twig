{% extends 'AppBundle::layout.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-md-12 text-center">
            <h3 class="page-header">My Tender</h3>
            </div>
         </div>
     <nav>
<ul class="nav nav-tabs">
  <li role="presentation" class="active"><a href="#">Details</a></li> 
  <li role="presentation" ><a href="{{ path('user_view_dossier_downloads',{'id':bid.contract.id}) }}">Downloads</a></li> 
  <li role="presentation"><a href="{{ path('user_view_tender',{'id':bid.id}) }}">Tenders</a></li> 
</ul>
</nav>
<div>
  <div style="margin-top:45px"></div>  
     <p>
         Current time: {{ "now"|date("d/m/Y h:m:s") }}
     </p>
<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Details</h3>
  </div>
  <div class="panel-body">
      <div class="pull-right">
                 <img src="{{ asset('images/Logo.PNG') }}" width="150" height="120" alt="IFMIS Logo" title="IFMIS Logo" />
              </div>
          <div style="margin-top:150px"></div>
    <div class="table-responsive">      
    <table class="table table-striped table-bordered">
        <tr>
            <td colspan="2" >
                <h3> 
                  {{ bid.contract.title }}
                </h3>
            </td>
        </tr>
       
        <tr><th>Tender Ref No</th>
            <td>
                {{ bid.contract.referenceNumber }}
            </td></tr>
       
        <tr><th>Type</th>
            <td>
                {{ bid.contract.procedureType}}
            </td></tr>
                
        <tr><th>Status</th>
            <td>
                {{ bid.contract.status}}
            </td></tr>
         <tr><th>Tender deadline</th>
         <td>
                {{ bid.contract.closingDate|date("d/m/Y h:m:s")}}
                
         </td></tr>
                        
        <tr><th>Description</th>
            <td>
                {{ bid.contract.description }}
            </td></tr>
     
       <tr><th>Application Fee</th>
            <td>
                {{ bid.contract.paymentCurrency }} {{ bid.contract.price }}
            </td></tr>
    </table>
    </div>
  </div>
</div>
    
 </div>
{% endblock %}


